{
    "compilerOptions": {
      "outDir": "lib",
      "strictNullChecks": true,
      "sourceMap": true,
      "noImplicitAny": true,
      "module": "commonjs",
      "target": "es6",
      "esModuleInterop": true,
      "lib": ["es6"],
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "skipLibCheck": true,
      "allowSyntheticDefaultImports": true,
    },
    "compileOnSave": true,
    "include": ["./**/*"]
}
